{
    "compilerOptions": {
        "module": "commonjs",
        "target":"ES6",
        "baseUrl": "./",
        "paths":{
            "@root/*":["./*"],
            "@helper/*":["./Helpers/*"],
            "@controller/*":["./Controllers/*"],
            "@cron/*":["./Crons/*"],
            "@data/*":["./Data/*"]
        },
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true
    },
    "exclude": ["node_modules","**/node_modules/*"]
}